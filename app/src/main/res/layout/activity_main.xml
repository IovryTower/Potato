<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/body"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="22dp" />
    <ImageView
        android:id="@+id/arms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arms"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="22dp" />
    <ImageView
        android:id="@+id/ears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ears"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="22dp" />
    <ImageView
        android:id="@+id/eyebrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/eyebrows"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="22dp" />
    <ImageView
        android:id="@+id/eyes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/eyes"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="22dp" />
    <ImageView
        android:id="@+id/glasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/glasses"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="22dp" />
    <ImageView
        android:id="@+id/hat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hat"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="22dp" />
    <ImageView
        android:id="@+id/mouth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mouth"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="22dp" />
    <ImageView
        android:id="@+id/mustache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mustache"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="22dp" />
    <ImageView
        android:id="@+id/nose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nose"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="22dp" />
    <ImageView
        android:id="@+id/shoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shoes"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="22dp" />

    <CheckBox
        android:id="@+id/c_nose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/body"
        android:layout_marginTop="0dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="50dp"
        android:text="nose" />

    <CheckBox
        android:id="@+id/c_shoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/body"
        android:layout_toRightOf="@+id/c_nose"
        android:layout_marginTop="0dp"
        android:text="shoes" />

    <CheckBox
        android:id="@+id/c_mustache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c_nose"
        android:layout_marginTop="3dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="50dp"
        android:text="mustache" />

    <CheckBox
        android:id="@+id/c_arms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c_nose"
        android:layout_toRightOf="@+id/c_nose"
        android:layout_marginTop="3dp"
        android:text="arms" />

    <CheckBox
        android:id="@+id/c_mouth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c_mustache"
        android:layout_marginTop="3dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="50dp"
        android:text="mouth" />

    <CheckBox
        android:id="@+id/c_hat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c_mustache"
        android:layout_toRightOf="@+id/c_nose"
        android:layout_marginTop="3dp"
        android:text="hat" />

    <CheckBox
        android:id="@+id/c_glasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c_mouth"
        android:layout_marginTop="3dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="50dp"
        android:text="glasses" />

    <CheckBox
        android:id="@+id/c_eyes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c_mouth"
        android:layout_toRightOf="@+id/c_nose"
        android:layout_marginTop="3dp"
        android:text="eyes" />

    <CheckBox
        android:id="@+id/c_eyebrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c_glasses"
        android:layout_marginTop="3dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="50dp"
        android:text="eyebrows" />

    <CheckBox
        android:id="@+id/c_ears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c_glasses"
        android:layout_toRightOf="@+id/c_nose"
        android:layout_marginTop="3dp"
        android:text="ears" />

</RelativeLayout>